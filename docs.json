{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "BackAnt",
  "appearance": {
    "default": "dark"
  },
  "colors": {
    "primary": "#4ADE80",
    "light": "#18E299",
    "dark": "#16A34A"
  },
  "background": {
    "dark": "#0d0d0d"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Getting Started",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "getting-started/installation",
              "getting-started/configuration"
            ]
          },
          {
            "group": "Deployment",
            "pages": [
              "deployment/overview"
            ]
          },
          {
            "group": "Changelog",
            "pages": [
              "changelog"
            ]
          }
        ]
      },
      {
        "tab": "MCP",
        "groups": [
          {
            "group": "MCP Server",
            "pages": [
              "getting-started/agentic-development",
              "getting-started/mcp-server"
            ]
          }
        ]
      },
      {
        "tab": "CLI",
        "groups": [
          {
            "group": "CLI Reference",
            "pages": [
              "cli/installation",
              "cli/overview",
              "cli/generate-api",
              "cli/generate-route",
              "cli/generate-subroute",
              "cli/json-spec"
            ]
          },
          {
            "group": "Architecture",
            "pages": [
              "architecture/overview",
              "getting-started/directory-structure"
            ]
          },
          {
            "group": "The Basics",
            "pages": [
              "the-basics/routing",
              "the-basics/middleware",
              "the-basics/controllers",
              "the-basics/requests",
              "the-basics/responses",
              "the-basics/schemas",
              "the-basics/error-handling",
              "the-basics/logging"
            ]
          },
          {
            "group": "Security",
            "pages": [
              "security/authentication",
              "security/authorization",
              "security/encryption"
            ]
          },
          {
            "group": "Database",
            "pages": [
              "database/getting-started",
              "database/query-builder",
              "database/migrations",
              "database/seeding"
            ]
          },
          {
            "group": "External APIs",
            "pages": [
              "apis/aws"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/backant",
          "icon": "github"
        },
        {
          "anchor": "Support",
          "href": "mailto:support@backant.io",
          "icon": "envelope"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "https://backant.io"
  },
  "font": {
    "headings": {
      "family": "JetBrains Mono"
    },
    "body": {
      "family": "JetBrains Mono"
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@backant.io"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://backant.io/dashboard"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/backant"
    }
  }
}
